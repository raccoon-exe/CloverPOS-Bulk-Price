{
    "manifest_version": 3,
    "name": "Clover POS Bulk Price",
    "version": "1.1",
    "description": "Clover POS Bulk Price tool by raccoon-exe (catari). Update category prices instantly.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://*.clover.com/*"
    ],
    "action": {
        "default_popup": "src/popup/popup.html",
        "default_icon": {
            "16": "assets/logo.png",
            "48": "assets/logo.png",
            "128": "assets/logo.png"
        }
    },
    "icons": {
        "16": "assets/logo.png",
        "48": "assets/logo.png",
        "128": "assets/logo.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.clover.com/*"
            ],
            "js": [
                "src/content/content.js"
            ],
            "css": [
                "src/content/styles.css"
            ],
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/logo.png"
            ],
            "matches": [
                "*://*.clover.com/*"
            ]
        }
    ]
}